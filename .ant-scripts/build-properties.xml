<?xml version="1.0"?>
<project>
        <description>
                Common properties shared across all submodules
        </description>

        <property name="libs" location="${project.root}/libs" />
        <property name="ant.scripts" location="${project.root}/.ant-scripts" />

        <property file="${ant.scripts}/build-numbers.properties" />
        <!-- Default build numbers in absence of build-numbers.properties -->
        <property name="build.major" value="0" />
        <property name="build.minor" value="0" />
        <property name="build.number" value="1" />
        <property name="version.number"
            value="${build.major}.${build.minor}.${build.number}" />

        <property file="${ant.scripts}/build.properties" />
</project>
